{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ]
  },
  "include": ["src/**/*", "node_modules/@figma/plugin-typings/index.d.ts"],
  "exclude": ["node_modules", "dist"]
}
